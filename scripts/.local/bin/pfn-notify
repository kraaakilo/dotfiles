#!/bin/bash

ping_output=$(ping ping-eu.ds.on.epicgames.com -c 4)
ping=$(echo "$ping_output" | grep -oP 'time=\K\d+' | tail -1)

CHAT_ID="1551732857"
MESSAGE="Ping = $ping; ðŸŽ® Let's play ðŸŽŠ"
LOG_FILE="/tmp/ping.txt"

if [ "$ping" -lt 120 ]; then
	curl -s -X POST https://api.telegram.org/bot$TELEGRAM_BOT/sendMessage -d chat_id=$CHAT_ID -d text="$MESSAGE"
fi
